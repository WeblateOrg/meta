sed -i '/# renovate: datasource=pypi depName=uv /D' .github/workflows/*.{yml,yaml}

for file in .github/workflows/*.{yml,yaml}; do
    "${ROOT:-.}/update-workflow" "$file"
done

"${ROOT:-.}/update-pre-commit" .pre-commit-config.yaml
