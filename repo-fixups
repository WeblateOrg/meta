#!/bin/sh
# shellcheck: disable=SC2317

exit

# Use unicode name
git grep -l 'Copyright .* Michal Cihar' | grep -v '\.po$' | xargs -r sed -i 's/\(Copyright .* )Michal Cihar/\1 Michal Čihař/'
# Use unicode symbol
git grep -l 'Copyright ([cC]) .* Michal Čihař' | grep -v '\.po$' | xargs -r sed -i 's/\Copyright ([cC]) \(.* Michal Čihař\)/Copyright © \1/'
# Add copyright symbol
git grep -l 'Copyright 2.* Michal Čihař' | grep -v '\.po$' | xargs -r sed -i 's/\Copyright \(2.* Michal Čihař\)/Copyright © \1/'
# Extend one year to range
git grep -l 'Copyright [^0-9]*20[12][0-9] Michal Čihař' | grep -v '\.po$' | xargs -r sed -i 's/\(Copyright [^0-9]*\)\(20[12][0-9]\)\( Michal Čihař\)/\1\2–2023\3/'
# Extend ranges
git grep -l 'Copyright .*[0-9][ –-]\+\(201[0-9]\|2020\|2021\|2022\) Michal Čihař' | grep -v '\.po$' | xargs -r sed -i 's/\(Copyright .*[0-9]\)[ –-]\+\(201[0-9]\|2020\|2021\|2022\)\( Michal Čihař\)/\1–2023\3/'
