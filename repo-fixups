#!/bin/sh

git grep -l 'Copyright [^0-9]*20[12][0-9] Michal [CČ]iha[rř]' | xargs sed -i 's/\(Copyright [^0-9]*\)\(20[12][0-9]\)\( Michal [CČ]iha[rř]\)/\1\2 - 2022 Michal Čihař/'
git grep -l 'Copyright .*[0-9].*[ –-]2021 Michal [CČ]iha[rř]' | grep -v '\.po$' | xargs sed -i 's/\(Copyright .*[0-9].*[ –-]\)2021\( Michal [CČ]iha[rř]\)/\12022 Michal Čihař/'
